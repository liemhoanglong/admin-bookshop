<div class="container mt-5">
	<!-- row -->
	<div class="row tm-content-row">
		<div class="tm-block-col tm-col-avatar">
			<div class="tm-bg-primary-dark tm-block tm-block-avatar">
				<h2 class="tm-block-title">Ảnh đại diện</h2>
				<div class="tm-avatar-container">
					<img
					src="img/avatar.png"
					alt="Avatar"
					class="tm-avatar img-fluid mb-4"
					/>
					<a href="#" class="tm-avatar-delete-link">
						<i class="far fa-trash-alt tm-product-delete-icon"></i>
					</a>
				</div>
				<button class="btn btn-primary btn-block text-uppercase">
					Tải ảnh lên
				</button>

			</div>
		</div>
		<div class="tm-block-col tm-col-account-settings">
			<div class="tm-bg-primary-dark tm-block tm-block-settings">
				<h2 class="tm-block-title">Thông tin tài khoản</h2>
				<form action="/edit-employee?id={{data.id}}" method="POST" class="tm-signup-form row">
					<div class="form-group col-lg-6">
						<label for="name">Tên người dùng:</label>
						<input
						id="name"
						name="name"
						type="text"
						value="{{data.name}}"
						class="form-control validate"
						disabled
						/>
					</div>
					<div class="form-group col-lg-6">
						<label for="email">Email:</label>
						<input
						id="email"
						name="email"
						type="text"
						value="{{data.email}}"
						class="form-control validate"
						disabled
						/>
					</div>
					<div class="form-group col-lg-6">
						<label for="phone">Số điện thoại:</label>
						<input
						id="phone"
						name="phone"
						type="text"
						value="{{data.phone}}"
						class="form-control validate"
						disabled
						/>
					</div>
					<div class="form-group col-lg-6">
						<label for="type">Loại:</label>
						<!-- <input
						id="type"
						name="type"
						type="text"
						value="{{data.type}}"
						class="form-control validate"
						/> -->
						<select name="type" class="custom-select tm-select-accounts">{{type_select data.type type}}</select> 
					</div>
					<div class="form-group col-lg-6">
						<label for="img">Link ảnh đại diện:</label>
						<input
						id="img"
						name="img"
						type="text"
						value="{{data.img}}"
						class="form-control validate"
						disabled
						/>
					</div>
					<div class="form-group col-lg-6">
						<label for="lock">Khóa tài khoản</label>
						{{#if isMe}}
						<select name="lock" class="custom-select tm-select-accounts" disabled>{{lock_select data.lock lock}}</select>
						{{else}}
						<select name="lock" class="custom-select tm-select-accounts">{{lock_select data.lock lock}}</select>
						{{/if}}
					</div>
					<div class="form-group col-lg-12">
						<label for="address">Địa chỉ:</label>
						<input
						id="address"
						name="address"
						type="text"
						value="{{data.address}}"
						class="form-control validate"
						disabled
						/>
					</div>
					<div class="form-group col-lg-12">
						<button
						type="submit"
						class="btn btn-primary btn-block text-uppercase"
						>
						Cập nhật
					</button>
					</div>
					<div class="col-lg-12">
						<a href="/delete?id={{data.id}}" style="color:white;"> 
							<button class="btn btn-primary btn-block text-uppercase">Xóa tài khoản</button>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<script src="js/jquery-3.3.1.min.js"></script>
