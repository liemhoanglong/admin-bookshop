          {{/each}}
        </select> 
        <hr> -->
        <table class="table table-striped">
          <tbody>
            {{# each admins}}
            <tr>
              <td class="tm-product-name"><a href="/show-user?id={{this.id}}" style="color:white;">{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.address}}</td>
                <td>{{this.type}}</td>                                
                <td>
                  <a href="/delete?id={{this.id}}" class="tm-product-delete-link">
                    <i class="far fa-trash-alt tm-product-delete-icon"></i>
                  </a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
