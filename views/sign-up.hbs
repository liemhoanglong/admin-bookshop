<div class="container mt-5">
  <div class="row tm-content-row">
    <div class="col-12 tm-block-col">
      <h1 class="tm-block-title text-center" style="font-size:50px;">Tạo tài khoản</h1>
    </div>
  </div>

  <!-- row -->
  <div class="row tm-content-row">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="tm-bg-primary-dark tm-block tm-block-settings">
        <!-- err msg -->
        <!-- if err exists -->
        {{#if err}}
        <!-- each err -->
        {{#each err}}
        <!-- show err.msg -->
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <h1 style="font-size:20px;">{{this.msg}}</h1>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        {{/each}}
        {{/if}}
        <!-- end err msg -->

        <br>
        <form 
        class="tm-signup-form row"
        action="/insert" 
        method="POST"
        id="contactForm"
        novalidate="novalidate"
        >
        <div class="form-group col-lg-12">
          <label for="name">Tên người dùng</label>
          <input
          id="name"
          name="name"
          type="text"
          class="form-control validate"
          value="{{name}}"
          />
        </div>
        <div class="form-group col-lg-12">
          <label for="email">Email</label>
          <input
          id="email"
          name="email"
          type="email"
          class="form-control validate"
          value="{{email}}"
          />
        </div>
        <div class="form-group col-lg-12">
          <label for="password">Mật khẩu</label>
          <input
          id="password"
          name="password"
          type="password"
          class="form-control validate"
          value="{{password}}"
          />
        </div>
        <div class="form-group col-lg-12">
          <label for="password1">Xác nhận mật khẩu</label>
          <input
          id="password1"
          name="password1"
          type="password"
          class="form-control validate"
          value="{{password1}}"
          />
        </div>
        <div class="form-group col-lg-12">
          <label for="phone">Số điện thoại</label>
          <input
          id="phone"
          name="phone"
          type="text"
          class="form-control validate"
          value="{{phone}}"
          />
        </div>
        <div class="form-group col-lg-12">
          <label for="address">Địa chỉ</label>
          <input
          id="address"
          name="address"
          type="text"
          class="form-control validate"
          value="{{address}}"
          />
        </div>
        <div class="form-group col-lg-12">
          <label for="type">Loại nhân viên</label>
          <input
          id="type"
          name="type"
          type="text"
          class="form-control validate"
          value="{{type}}"
          />
          <br>
        </div>
        <div class="col-4"></div>
        <div class="col-4">
          <button
          type="submit"
          class="btn btn-primary btn-block text-uppercase"
          >
          Tạo
        </button>
      </div>
    </form>
  </div>
</div>
<div class="col-2"></div>
</div>
</div>
<script src="js/jquery-3.3.1.min.js"></script>
