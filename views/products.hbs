<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Danh sách sản phẩm</h2>
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">&nbsp;</th>
                                <th scope="col">Tên sản phẩm</th>
                                <th scope="col">Đơn giá</th>
                                <th scope="col">Tác giả</th>
                                <!-- <th scope="col">Số lượng</th> -->
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{# each items}}
                            <tr>
                                <th scope="row"><input type="checkbox" /></th>
                                <td class="tm-product-name"><a href="/edit-product?id={{this.id}}" style="color:white;">{{this.title}}</a></td>
                                <td>{{this.price}}</td>
                                <td>{{this.author}}</td>
                                <td>
                                    <a href="/product-delete?id={{this.id}}" class="tm-product-delete-link">
                                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/ each}}
                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                <a href="add-product" class="btn btn-primary btn-block text-uppercase mb-3">Thêm sản phẩm</a>
                <button class="btn btn-primary btn-block text-uppercase">
                    Xóa sản phẩm được chọn
                </button>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-6 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Danh mục sản phẩm</h2>
                <div class="tm-product-table-container">
                    <table class="table tm-table-small tm-product-table">
                        <tbody>
                            <thead>
                                <tr>
                                    <th scope="col">&nbsp;</th>
                                    <th scope="col">Mã danh mục</th>
                                    <th scope="col">Tên danh muc</th>
                                    <!-- <th scope="col">Số lượng</th> -->
                                    <th scope="col">&nbsp;</th>
                                </tr>
                            </thead>
                            {{# each categories}}
                            <tr>
                                <th scope="row"><input type="checkbox" /></th>
                                <td class="tm-categories-name">{{this.categoriesID}}</td>
                                <td class="tm-categories-name">{{this.categories}}</td>
                                <td class="text-center">
                                    <a href="#" class="tm-product-delete-link">
                                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/ each}}
                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                <a href="add-product" class="btn btn-primary btn-block text-uppercase mb-3">Thêm danh mục</a>
                <button class="btn btn-primary btn-block text-uppercase mb-3">
                    Xóa danh mục đã chọn
                </button>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-6 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Nhà xuất bản</h2>
                <div class="tm-product-table-container">
                    <table class="table tm-table-small tm-product-table">
                        <tbody>
                            <thead>
                                <tr>
                                    <th scope="col">&nbsp;</th>
                                    <th scope="col">Mã NXB</th>
                                    <th scope="col">Tên NXB</th>
                                    <!-- <th scope="col">Số lượng</th> -->
                                    <th scope="col">&nbsp;</th>
                                </tr>
                            </thead>
                            {{# each publish}}
                            <tr>
                                <th scope="row"><input type="checkbox" /></th>
                                <td class="tm-publish-name">{{this.publisherID}}</td>
                                <td class="tm-publish-name">{{this.publisher}}</td>
                                <td class="text-center">
                                    <a href="#" class="tm-product-delete-link">
                                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/ each}}
                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                <a href="add-product" class="btn btn-primary btn-block text-uppercase mb-3">Thêm nhà xuất bản</a>
                <button class="btn btn-primary btn-block text-uppercase mb-3">
                    Xóa nhà xuất bản được chọn
                </button>
            </div>
        </div>
    </div>
</div>
<script src="js/jquery-3.3.1.min.js"></script>
